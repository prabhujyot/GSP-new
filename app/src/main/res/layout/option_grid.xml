<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineOption1H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineOption1V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/optionA"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="The Jatropha curcas."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        android:background="@drawable/bg_btn_gray"
        android:padding="@dimen/margin4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guidelineOption1H"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineOption1V"
        android:layout_marginBottom="@dimen/margin4"
        android:layout_marginEnd="@dimen/margin4"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/optionB"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="The Jatropha curcas."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        android:background="@drawable/bg_btn_gray"
        android:padding="@dimen/margin4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guidelineOption1H"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineOption1V"
        android:layout_marginBottom="@dimen/margin4"
        android:layout_marginStart="@dimen/margin4"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/optionC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="The Jatropha curcas."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        android:background="@drawable/bg_btn_gray"
        android:padding="@dimen/margin4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineOption1V"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineOption1H"
        android:layout_marginTop="@dimen/margin4"
        android:layout_marginEnd="@dimen/margin4"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/optionD"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="The Jatropha curcas."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        android:background="@drawable/bg_btn_gray"
        android:padding="@dimen/margin4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineOption1V"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineOption1H"
        android:layout_marginTop="@dimen/margin4"
        android:layout_marginStart="@dimen/margin4"/>

</androidx.constraintlayout.widget.ConstraintLayout>