<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineOption1V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/optionA"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginEnd="@dimen/margin4"
        android:background="@drawable/bg_btn_gray"
        android:padding="@dimen/margin4"
        android:text="The Jatropha curcas."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/guidelineOption1V"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/optionB"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginStart="@dimen/margin4"
        android:background="@drawable/bg_btn_gray"
        android:padding="@dimen/margin4"
        android:text="The Jatropha curcas."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineOption1V"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/optionC"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginTop="@dimen/margin8"
        android:layout_marginEnd="@dimen/margin4"
        android:background="@drawable/bg_btn_gray"
        android:padding="@dimen/margin4"
        android:text="The Jatropha curcas."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/guidelineOption1V"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/optionA"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/optionD"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginStart="@dimen/margin4"
        android:layout_marginTop="@dimen/margin8"
        android:background="@drawable/bg_btn_gray"
        android:padding="@dimen/margin4"
        android:text="The Jatropha curcas."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineOption1V"
        app:layout_constraintTop_toBottomOf="@id/optionB" />

</androidx.constraintlayout.widget.ConstraintLayout>