<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="in.allen.gsp.ui.leaderboard.LeaderboardViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.leaderboard.LeaderboardActivity"
        android:keepScreenOn="true">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:background="@drawable/gradiant_blue"
                app:contentScrim="@color/blue"
                app:titleEnabled="false">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/titleHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblTopPlayers"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/bg_btn_blue_dark"
                        android:paddingTop="@dimen/margin8"
                        android:paddingBottom="@dimen/margin8"
                        android:paddingLeft="@dimen/margin56"
                        android:paddingRight="@dimen/margin56"
                        android:layout_marginTop="@dimen/margin88"/>

                    <ImageView
                        android:id="@+id/rank_first_avatar"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toBottomOf="@id/titleHeader"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/bg_circle_orange"
                        android:layout_marginTop="@dimen/margin16"/>
                    <TextView
                        android:id="@+id/rank_first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/rank_first_avatar"
                        app:layout_constraintStart_toStartOf="@id/rank_first_avatar"
                        app:layout_constraintEnd_toEndOf="@id/rank_first_avatar"
                        android:layout_marginTop="@dimen/margin8"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
                    <TextView
                        android:id="@+id/rank_first_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/rank_first_name"
                        app:layout_constraintStart_toStartOf="@id/rank_first_name"
                        app:layout_constraintEnd_toEndOf="@id/rank_first_name"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="@dimen/margin2"
                        android:layout_marginBottom="@dimen/margin8"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintTop_toTopOf="@id/rank_first_avatar"
                        app:layout_constraintEnd_toEndOf="@id/rank_first_avatar"
                        android:background="@drawable/bg_circle_black"
                        android:text='@string/one'
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/rank_second_avatar"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="@id/rank_first_avatar"
                        app:layout_constraintEnd_toStartOf="@id/rank_first_avatar"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/bg_circle_orange"
                        android:layout_marginRight="@dimen/margin32"/>
                    <TextView
                        android:id="@+id/rank_second_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/rank_second_avatar"
                        app:layout_constraintStart_toStartOf="@id/rank_second_avatar"
                        app:layout_constraintEnd_toEndOf="@id/rank_second_avatar"
                        android:layout_marginTop="@dimen/margin8"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
                    <TextView
                        android:id="@+id/rank_second_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/rank_second_name"
                        app:layout_constraintStart_toStartOf="@id/rank_second_name"
                        app:layout_constraintEnd_toEndOf="@id/rank_second_name"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="@dimen/margin2"
                        android:layout_marginBottom="@dimen/margin8"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintTop_toTopOf="@id/rank_second_avatar"
                        app:layout_constraintEnd_toEndOf="@id/rank_second_avatar"
                        android:background="@drawable/bg_circle_black"
                        android:text="@string/two"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/rank_third_avatar"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="@id/rank_first_avatar"
                        app:layout_constraintStart_toEndOf="@id/rank_first_avatar"
                        android:background="@drawable/bg_circle_orange"
                        android:layout_marginLeft="@dimen/margin32"/>
                    <TextView
                        android:id="@+id/rank_third_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/rank_third_avatar"
                        app:layout_constraintStart_toStartOf="@id/rank_third_avatar"
                        app:layout_constraintEnd_toEndOf="@id/rank_third_avatar"
                        android:layout_marginTop="@dimen/margin8"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
                    <TextView
                        android:id="@+id/rank_third_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/rank_third_name"
                        app:layout_constraintStart_toStartOf="@id/rank_third_name"
                        app:layout_constraintEnd_toEndOf="@id/rank_third_name"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="@dimen/margin2"
                        android:layout_marginBottom="@dimen/margin8"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintTop_toTopOf="@id/rank_third_avatar"
                        app:layout_constraintEnd_toEndOf="@id/rank_third_avatar"
                        android:background="@drawable/bg_circle_black"
                        android:text="@string/three"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                        android:gravity="center"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <include layout="@layout/toolbar"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_overlapTop="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@drawable/gradiant_orange">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_leaderboard"
                android:layout_margin="@dimen/margin8"/>

            <ProgressBar
                android:id="@+id/tinyProgressBar"
                android:layout_width="@dimen/margin24"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin88"/>
        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
