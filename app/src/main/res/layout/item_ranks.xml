<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/titleHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblTopPlayers"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="@dimen/margin56"
        android:paddingRight="@dimen/margin56"
        android:layout_marginTop="@dimen/margin16"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/rank_first_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/greyLight"
        app:tint="@null"
        app:maxImageSize="80dp"
        app:fabCustomSize="80dp"
        app:layout_constraintTop_toBottomOf="@id/titleHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin16"
        android:clickable="false"/>
    <TextView
        android:id="@+id/rank_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rank_first_avatar"
        app:layout_constraintStart_toStartOf="@id/rank_first_avatar"
        app:layout_constraintEnd_toEndOf="@id/rank_first_avatar"
        android:layout_marginTop="@dimen/margin8"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        app:layout_constraintWidth_max="95dp"/>
    <TextView
        android:id="@+id/rank_first_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rank_first_name"
        app:layout_constraintStart_toStartOf="@id/rank_first_name"
        app:layout_constraintEnd_toEndOf="@id/rank_first_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/margin2"
        android:layout_marginBottom="@dimen/margin8"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
    <TextView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="@id/rank_first_avatar"
        app:layout_constraintBottom_toBottomOf="@id/rank_first_avatar"
        android:layout_marginStart="@dimen/margin56"
        android:layout_marginBottom="@dimen/margin56"
        android:background="@drawable/bg_circle_black"
        android:text='@string/one'
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:gravity="center"
        android:elevation="6dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/rank_second_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/rank_first_avatar"
        app:layout_constraintEnd_toStartOf="@id/rank_first_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/greyLight"
        app:tint="@null"
        app:maxImageSize="65dp"
        app:fabCustomSize="65dp"
        android:layout_marginRight="@dimen/margin32"
        android:clickable="false"/>

    <TextView
        android:id="@+id/rank_second_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin8"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/rank_second_avatar"
        app:layout_constraintStart_toStartOf="@id/rank_second_avatar"
        app:layout_constraintTop_toBottomOf="@id/rank_second_avatar"
        app:layout_constraintWidth_max="95dp" />
    <TextView
        android:id="@+id/rank_second_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rank_second_name"
        app:layout_constraintStart_toStartOf="@id/rank_second_name"
        app:layout_constraintEnd_toEndOf="@id/rank_second_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/margin2"
        android:layout_marginBottom="@dimen/margin8"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
    <TextView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="@id/rank_second_avatar"
        app:layout_constraintBottom_toBottomOf="@id/rank_second_avatar"
        android:layout_marginStart="@dimen/margin44"
        android:layout_marginBottom="@dimen/margin44"
        android:background="@drawable/bg_circle_black"
        android:text="@string/two"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:gravity="center"
        android:elevation="6dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/rank_third_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/greyLight"
        app:tint="@null"
        app:maxImageSize="65dp"
        app:fabCustomSize="65dp"
        app:layout_constraintBottom_toBottomOf="@id/rank_first_avatar"
        app:layout_constraintStart_toEndOf="@id/rank_first_avatar"
        android:layout_marginLeft="@dimen/margin32"
        android:clickable="false"/>
    <TextView
        android:id="@+id/rank_third_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rank_third_avatar"
        app:layout_constraintStart_toStartOf="@id/rank_third_avatar"
        app:layout_constraintEnd_toEndOf="@id/rank_third_avatar"
        android:layout_marginTop="@dimen/margin8"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        app:layout_constraintWidth_max="95dp"/>
    <TextView
        android:id="@+id/rank_third_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rank_third_name"
        app:layout_constraintStart_toStartOf="@id/rank_third_name"
        app:layout_constraintEnd_toEndOf="@id/rank_third_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/margin2"
        android:layout_marginBottom="@dimen/margin8"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
    <TextView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="@id/rank_third_avatar"
        app:layout_constraintBottom_toBottomOf="@id/rank_third_avatar"
        android:layout_marginStart="@dimen/margin44"
        android:layout_marginBottom="@dimen/margin44"
        android:background="@drawable/bg_circle_black"
        android:text="@string/three"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:gravity="center"
        android:elevation="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>