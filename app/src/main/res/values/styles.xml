<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <!-- THIS is where you can color the arrow and the overflow button! -->
        <item name="colorControlNormal">@color/white</item> <!-- sets the color for the back arrow -->
        <item name="actionOverflowButtonStyle">@color/white</item> <!-- sets the style for the overflow button -->
    </style>

</resources>