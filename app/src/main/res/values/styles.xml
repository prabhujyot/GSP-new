<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <!-- THIS is where you can color the arrow and the overflow button! -->
        <item name="colorControlNormal">@color/white</item> <!-- sets the color for the back arrow -->
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item> <!-- sets the style for the overflow button -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="BlackNoTitleBarTheme" parent="android:Theme.Black.NoTitleBar"/>

    <style name="SlidingDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="ChipTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabBackground">@drawable/selector_tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>


    <!-- Base Material theme. -->
    <style name="Theme.Material" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <!-- THIS is where you can color the arrow and the overflow button! -->
        <item name="colorControlNormal">@color/white</item> <!-- sets the color for the back arrow -->
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item> <!-- sets the style for the overflow button -->
    </style>


</resources>